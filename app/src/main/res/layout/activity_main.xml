<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.galactica.MainActivity">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tinyPadding"
        android:id="@+id/list_view"
        android:divider="@null"
        android:dividerHeight="0dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no_internet_warning"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/titleText"
        tools:text="@string/no_internet_connection"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no_data_warning"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/titleText"
        tools:text="@string/no_data_connection"/>
    <ProgressBar
        android:id="@+id/loading_warning"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
</RelativeLayout>
